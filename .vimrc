set cm=blowfish
set expandtab
set tabstop=4
set nu
set autoindent
set shiftwidth=4
set showtabline=0
set nohlsearch
syntax on
set mouse=a
set incsearch

" set tab spacing for HTML
map \h :set softtabstop=2<CR>:set shiftwidth=2<CR>
" change column width
map \t :set tw=
" change filetype to coffeescript
map \c :set ft=coffee<CR><CR>
